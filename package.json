{
  "name": "markform-workspace",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter markform test:unit",
    "test:golden": "pnpm --filter markform test:golden",
    "publint": "pnpm -r publint",
    "format": "prettier --write --log-level warn . && flowmark --auto -i $(git ls-files '*.md' | grep -v -E '(tests/cli/|/examples/|CHANGELOG\\.md|/\\.tbd/|/\\.claude/skills/|AGENTS\\.md)')",
    "format:check": "prettier --check --log-level warn .",
    "lint": "eslint . --fix && pnpm typecheck && eslint . --max-warnings 0",
    "lint:check": "pnpm typecheck && eslint . --max-warnings 0",
    "precommit": "pnpm format && pnpm lint:check && pnpm test",
    "markform": "tsx packages/markform/src/cli/bin.ts",
    "markform:bin": "node packages/markform/dist/bin.mjs",
    "changeset": "changeset",
    "changeset:add": "tsx scripts/create-changeset.ts",
    "release:changes": "./scripts/release-notes.sh",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm publint && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.1.0",
    "atomically": "^2.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "lefthook": "^2.0.16",
    "prettier": "^3.8.1",
    "tryscript": "0.1.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  }
}
