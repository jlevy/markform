{
  "name": "markform-workspace",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.26.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "lefthook"
    ]
  },
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "pnpm -r build",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:unit": "pnpm --filter markform test:unit",
    "test:golden": "pnpm --filter markform test:golden",
    "publint": "pnpm -r publint",
    "lint": "eslint .",
    "precommit": "pnpm typecheck && pnpm lint && pnpm test",
    "markform": "node packages/markform/dist/bin.mjs",
    "changeset": "changeset",
    "changeset:add": "npx tsx scripts/create-changeset.ts",
    "version-packages": "changeset version",
    "release": "pnpm build && pnpm publint && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.28.0",
    "@eslint/js": "^9.0.0",
    "eslint": "^9.0.0",
    "lefthook": "^2.0.12",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0"
  }
}
