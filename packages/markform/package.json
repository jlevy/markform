{
  "name": "markform",
  "version": "0.1.14",
  "description": "Markdown forms for token-friendly workflows",
  "license": "AGPL-3.0-or-later",
  "author": "Joshua Levy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlevy/markform.git",
    "directory": "packages/markform"
  },
  "homepage": "https://github.com/jlevy/markform#readme",
  "bugs": {
    "url": "https://github.com/jlevy/markform/issues"
  },
  "keywords": [
    "forms",
    "markdown",
    "ai",
    "agents",
    "llm",
    "structured-data",
    "markdoc",
    "ai-sdk"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.mts",
      "default": "./dist/cli.mjs"
    },
    "./ai-sdk": {
      "types": "./dist/ai-sdk.d.mts",
      "default": "./dist/ai-sdk.mjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "markform": "./dist/bin.mjs"
  },
  "files": [
    "dist",
    "docs",
    "examples",
    "README.md"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "copy-docs": "cp ../../README.md . && mkdir -p docs && cp ../../docs/markform-spec.md docs/ && cp ../../docs/markform-reference.md docs/ && cp ../../docs/markform-apis.md docs/",
    "build": "pnpm run copy-docs && tsdown",
    "dev": "tsdown --watch",
    "prepare": "pnpm run copy-docs && tsdown",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:golden": "vitest run tests/golden",
    "test:golden:regen": "tsx scripts/regen-golden-sessions.ts",
    "test:coverage": "pnpm test:coverage:vitest && pnpm test:coverage:tryscript && pnpm coverage:merge",
    "test:coverage:vitest": "vitest run --coverage",
    "test:coverage:tryscript": "tryscript run --coverage 'tests/cli/**/*.tryscript.md' 2>&1 | awk '/node_modules|@ai-sdk|eventsource-parser/{skip=1;next} /^ packages\\/markform/{skip=0} !skip || !/^  .*\\./'",
    "test:tryscript": "tryscript run 'tests/cli/**/*.tryscript.md'",
    "test:tryscript:update": "tryscript run --update 'tests/cli/**/*.tryscript.md'",
    "coverage:merge": "tsx scripts/merge-coverage.ts",
    "publint": "publint"
  },
  "dependencies": {
    "@ai-sdk/deepseek": "^2.0.1",
    "@ai-sdk/google": "^3.0.1",
    "@ai-sdk/openai": "^3.0.1",
    "@ai-sdk/xai": "^3.0.2",
    "@clack/prompts": "^0.11.0",
    "@markdoc/markdoc": "^0.5.4",
    "ai": "^6.0.3",
    "atomically": "^2.1.0",
    "commander": "^14.0.2",
    "dotenv": "^17.2.3",
    "jiti": "^2.6.1",
    "js-sha256": "^0.11.1",
    "picocolors": "^1.1.1",
    "yaml": "^2.8.2",
    "zod": "^4.2.1"
  },
  "c8": {
    "excludeNodeModules": true,
    "include": [
      "src/**"
    ],
    "exclude": [
      "**/node_modules/**",
      "tests/**",
      "coverage/**",
      "scripts/**"
    ]
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "^3.0.1",
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "c8": "^10.1.3",
    "publint": "^0.3.16",
    "tryscript": "^0.1.1",
    "tsdown": "^0.18.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
